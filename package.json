{
  "name": "lightening",
  "version": "0.0.1-dev",
  "description": "The lightening! It's happening!",
  "engines": {
    "node": "10.11.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "==================== COMMON ====================": "",
    "lint": "check-node-version --package",
    "==================== CLIENT ====================": "",
    "client-build": "npm run client-js-build && npm run client-css-build",
    "client-js-dev": "NODE_PATH=src watchify src/lightening/client/index.ts -p [ tsify --project src/lightening/client ] -v -o src/lightening/client/index.js",
    "client-js-build": "NODE_PATH=src browserify src/lightening/client/index.ts -p [ tsify --project src/lightening/client ] > src/lightening/client/index.js",
    "client-css-dev": "chokidar 'src/**/*.scss' --initial --command 'node-sass --include-path=node_modules --output src/lightening/client src/lightening/client/index.scss'",
    "client-css-build": "node-sass --include-path=node_modules --output src/lightening/client src/lightening/client/index.scss",
    "==================== SERVER ====================": "",
    "server-dev": "check-node-version --package && NODE_PATH=src nodemon --watch src --ext ts --exec ts-node -- src/lightening/server",
    "server-build": "NODE_PATH=src tsc --project src/lightening/server",
    "server-start": "check-node-version --package && NODE_PATH=src node src/lightening/server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jareware/lightening.git"
  },
  "author": "Jarno Rantanen <jarno@jrw.fi>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/jareware/lightening/issues"
  },
  "homepage": "https://github.com/jareware/lightening#readme",
  "dependencies": {
    "check-node-version": "^3.2.0",
    "node-static": "^0.7.11",
    "node-tradfri-client": "^1.3.4",
    "ws": "^6.1.0"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/lodash": "^4.14.117",
    "@types/node-static": "^0.7.2",
    "@types/node": "^10.11.6",
    "@types/ws": "^6.0.1",
    "browserify": "^16.2.3",
    "chokidar-cli": "^1.2.1",
    "cli-table": "^0.3.1",
    "lodash": "^4.17.11",
    "node-sass": "^4.9.4",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "tsify": "^4.0.0",
    "typescript": "^3.1.1",
    "watchify": "^3.11.0"
  }
}
